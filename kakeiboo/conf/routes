# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
# GET   /   controllers.HomeController.index(name:java.util.Optional[String],value:java.util.Optional[String])

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                                   controllers.Assets.versioned(path="/public", file: Asset)

#                 #
# kakeibooPC      #
#                 #
# login
GET     /kakeiboo/login                                 controllers.kakeibooPc.LoginController.login()
GET     /                                               controllers.kakeibooPc.LoginController.redirectTop()
GET     /kakeiboo                                       controllers.kakeibooPc.LoginController.redirectTop()
GET     /kakeiboo/                                      controllers.kakeibooPc.LoginController.redirectTop()
POST    /loginCheck                                     controllers.kakeibooPc.LoginController.loginCheck()

# menu
GET     /kakeiboo/menu                                  controllers.kakeibooPc.MenuController.menu()
POST    /graphList                                      controllers.kakeibooPc.MenuController.getGraphList()

# calendar
GET     /kakeiboo/calendar                              controllers.kakeibooPc.CalendarController.calendar()
POST    /calendarList                                   controllers.kakeibooPc.CalendarController.getCalendarList()
POST    /calendarUpdate                                 controllers.kakeibooPc.CalendarController.calendarUpdate()

# calendarRegist
GET     /kakeiboo/calendar/calendarRegist               controllers.kakeibooPc.CalendarRegistController.calendarRegist()
POST    /calendarDataRegist                             controllers.kakeibooPc.CalendarRegistController.calendarDataRegist()
POST    /formatDownload                                 controllers.kakeibooPc.CalendarRegistController.formatDownload()

# kakeibo
GET     /kakeiboo/kakeibo                               controllers.kakeibooPc.KakeiboController.kakeibo()
POST    /kakeiboList                                    controllers.kakeibooPc.KakeiboController.getKakeiboList()
POST    /categorySumList                                controllers.kakeibooPc.KakeiboController.getCategorySumList()
POST    /kakeiboRegist                                  controllers.kakeibooPc.KakeiboController.kakeiboRegist()

# statistics
GET     /kakeiboo/statistics                            controllers.kakeibooPc.StatisticsController.statistics()
POST    /statisticsList                                 controllers.kakeibooPc.StatisticsController.getStatisticsList()

# deposit
GET     /kakeiboo/deposit                               controllers.kakeibooPc.DepositController.deposit()
POST    /higashiDepositList                             controllers.kakeibooPc.DepositController.getHigashiDepositList()

# credit
GET     /kakeiboo/credit                                controllers.kakeibooPc.CreditController.credit()
POST    /creditList                                     controllers.kakeibooPc.CreditController.getCreditList()

# simulation
GET     /kakeiboo/simulation                            controllers.kakeibooPc.SimulationController.simulation()

# setting
GET     /kakeiboo/setting                               controllers.kakeibooPc.SettingController.setting()

# setting/systemPassword
GET     /kakeiboo/setting/systemPassword                controllers.kakeibooPc.SystemPasswordController.systemPassword()
POST    /systemPasswordBeforeCheck                      controllers.kakeibooPc.SystemPasswordController.systemPasswordBeforeCheck()
POST    /systemPasswordChange                           controllers.kakeibooPc.SystemPasswordController.systemPasswordChange()

# setting/category
GET     /kakeiboo/setting/category                      controllers.kakeibooPc.CategoryController.category()
POST    /settingCategory                                controllers.kakeibooPc.CategoryController.getSettingCategory()
POST    /categoryUpdate                                 controllers.kakeibooPc.CategoryController.categoryUpdate()

# setting/calendarDesignatedDate
